

<h1 class="text-center">Teams</h1>
<table class="table table-striped">

  <% @teams.each do |team| %>
      <tr>
      <td class="list_image">
        <%= image_tag(team.image_url) %>
      </td>
      <td class="list_description">
        <dl>
          <dt><h2><%= team.name %></h2></dt>  <br />
          <p><b>Star Player: </b><em><%= team.star_player %></em></p>
        </dl>
      </td>
      <td class="list_actions">
      <div class="btn-group">
        <div class="btn">
      <%= link_to 'View Team', team %>

        </div>
      </div>
      </td>
    </tr>
  <% end %>
</table>

<br />
<%= form_tag teams_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search_query, params[:search_query] %>
      <%= submit_tag "Search", :name => nil %>

    </p>

<% end %>
